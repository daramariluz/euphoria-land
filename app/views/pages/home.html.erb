<div class="home-banner">
  <h1>Disfruta tu próximo viaje con Euphoria Land</h1>
  <h2>Renta vehículos</h2>
</div>

<div class="container">
        <h2>Vehiculos disponibles</h2>
  <div class="row mt-2 mb-2">

    <% @vehicles_autos.take(1).each do |auto| %>
      <div class="col-4">
        <h2>Autos</h2>
        <div class="card" style="width: 18rem;">
          <img src="<%= auto.photo_url %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= auto.model %></h5>
            <p class="card-text">
              <%= auto.description %>
            </p>
            <%= link_to "Detalles", vehicle_path(auto) %>
          </div>
        </div>
      </div>
    <% end %>



    <% @vehicles_bicicletas.take(1).each do |bicicleta| %>
      <div class="col-4">
        <h2>Bicicletas</h2>
        <div class="card" style="width: 18rem;">
          <img src="<%= bicicleta.photo_url %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= bicicleta.model %></h5>
            <p class="card-text">
              <%= bicicleta.description %>
            </p>
            <%= link_to "Detalles", vehicle_path(bicicleta) %>
          </div>
        </div>
      </div>
    <% end %>


    <% @vehicles_scooters.take(1).each do |scooter| %>
      <div class="col-4">
        <h2>Scooters</h2>
        <div class="card" style="width: 18rem;">
          <img src="<%= scooter.photo_url %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= scooter.model %></h5>
            <p class="card-text">
              <%= scooter.description %>
            </p>
            <%= link_to "Detalles", vehicle_path(scooter) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
